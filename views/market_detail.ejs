        <style>
             .thumbnail-wrappper {
                width: 25%;
            }

            .thumbnail {
                position: relative;
                padding-top: 100%;  /* 1:1 ratio */
                overflow: hidden;
            }

            .thumbnail .centered  {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                -webkit-transform: translate(50%,50%);
                -ms-transform: translate(50%,50%);
                transform: translate(50%,50%);
            }

            .thumbnail .centered img {
                position: absolute;
                top: 0;
                left: 0;
                max-width: 100%;
                height: auto;
                -webkit-transform: translate(-50%,-50%);
                -ms-transform: translate(-50%,-50%);
                transform: translate(-50%,-50%);
            }
                th{
                    padding:10px;
                }
                td{
                    padding : 10px;
     }
            </style>
            <script language="JavaScript">
                 function CaricaFoto(img){
                 foto1= new Image();
                 foto1.src=(img);
                 Controlla(img);
                 }
                 function Controlla(img){
                 if((foto1.width!=0)&&(foto1.height!=0)){
                 viewFoto(img);
                 }
                 else{
                 funzione="Controlla('"+img+"')";
                 intervallo=setTimeout(funzione,20);
                 }
                 }

                function viewFoto(img){
                 largh=foto1.width;
                 altez=foto1.height;
                 stringa="width="+largh+",height="+altez;
                 finestra=window.open(img,"",stringa);
                 }

            </script>
    </head>
    <body>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <a class="navbar-brand" href="/main">덕선생._.</a>
            </div>
              <form class="navbar-form navbar-left" action="/market/search/author" method="get" id="searchAction" name = "searchAction">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="작가명을 입력하세요" name="searchWord" id="searchWord">
                </div>
                  <button type="submit" class="btn btn-default"><a href="#" onclick="searchContent()">검색</a></button>
              </form>
              <form class="navbar-form navbar-left" action="/market/search/goods" method="get" id="searchAction" name = "searchAction">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="제품명을 입력하세요" name="searchWord" id="searchWord">
                </div>
                  <button type="submit" class="btn btn-default"><a href="#" onclick="searchContent()">검색</a></button>
              </form>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/gallery">갤러리</a></li>
                <li><a href="/market">마켓</a></li>
                <li><a href="/myinfo">내정보보기</a></li>
              </ul>
          </div><!-- /.container-fluid -->
        </nav>
         <div>
             <img src="/images/mar_detail.png" style="width:300px;margin-left:50px;margin-bottom:10px;">
         </div>
         
        <% 
            var item = rows[0];
            var year = item.goods_date.getFullYear();
            var month = item.goods_date.getMonth()+1;
            var date = item.goods_date.getDate();                         
        %>
        
        <form action="/market/goods/<%=item.goods_code%>/<%=item.goods_numOrder%>" method="POST" enctype="multipart/form-data">
            
         <div style="max-width:100%; height:500px;margin-bottom:20px;margin-left:50px;margin-right:50px;padding:15px;background:#EAEAEA;border-radius:1em;" >
             <div style="margin-right:30px; float:left; width:340px;" class="thumbnail-wrapper">
                <div class="thumbnail">
                    <div class="centered">
                         <a href="javascript:CaricaFoto('/images/<%=item.goods_image%>')" border="0"><img src="/images/<%=item.goods_image%>" style="max-width:100%; height:auto;"></a>
                    </div>
                </div>
             </div>
             <div style="margin-top: 50px; float: left; font-size:1.5em;">
                 <table height="50px">
                     <tr>
                         <th>
                             게시일 :
                         </th>
                         <td>
                             <%=year +'-' +month +'-' +date%>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             제품명 :
                         </th>
                         <td>
                             <%=item.goods_name%>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             작가 :
                         </th>
                         <td>
                             <%=item.member_nick %>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             가격 :
                         </th>
                         <td>
                             <%=item.goods_cost %>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             최소주문수 :
                         </th>
                         <td>
                             <%=item.goods_order %>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             할인적용수 :
                         </th>
                         <td>
                             <%=item.goods_sale %>
                         </td>
                     </tr>
                     <tr>
                         <th>
                             현재주문수 :
                         </th>
                         <td>
                             <%=item.goods_numOrder %>
                         </td>
                     </tr>
                     <tr>
                        <th>
                            설명 :
                        </th>
                        <td>
                            <%=item.goods_content%>
                        </td>
                     </tr>
                 </table>
             </div>
         </div>
            <%
            var progress = parseInt(item.goods_numOrder) / parseInt(item.goods_sale) * 100 ;
            %>
        
            
        <div class="progress" style="margin-right:150px;margin-left:150px;margin-top:20px;margin-bottom:20px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="<%=item.goods_numOrder%>" aria-valuemin="0" aria-valuemax="<%=item.goods_sale%>" style="width: <%= progress %>%;">
                <%= item.goods_numOrder%>
            </div>
        </div>
         <div style="max-width:100%;height:auto; float:right; margin-right:80px;">
             <button type="submit" class="btn btn-primary" style="margin-right:20px;">구매신청</button>
         </div>
        </form>
