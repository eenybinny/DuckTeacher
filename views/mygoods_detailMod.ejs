              <form class="navbar-form navbar-left" action="/market/search/goods" method="get" id="searchAction" name = "searchAction">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="제품명을 입력하세요" name="searchWord" id="searchWord">
