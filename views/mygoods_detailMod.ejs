         <div>
             <img src="/images/mygoods_search.png" style="width:300px;margin-left:50px;margin-bottom:10px;">
         </div>
         
        <% 
            var item = rows[0];
            var year = item.goods_date.getFullYear();
            var month = item.goods_date.getMonth()+1;
            var date = item.goods_date.getDate();                         
        %>
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                  <div class="box box-primary">
                      <form action="/myinfo/goods/<%=item.goods_code%>/modify" method="POST" enctype="application/x-www-form-urlencoded">
            
                         <div style="max-width:100%; height:500px;margin-bottom:20px;margin-left:50px;margin-right:50px;padding:15px;background:#EAEAEA;border-radius:1em;" >
                             <div style="margin-right:30px; float:left; width:340px;" class="thumbnail-wrapper">
                                <div class="thumbnail">
                                    <div class="centered">
                                         <a href="javascript:CaricaFoto('/images/<%=item.goods_image%>')" border="0"><img src="/images/<%=item.goods_image%>" style="max-width:100%; height:auto;"></a>
                                    </div>
                                </div>
                             </div>
                             <div style="margin-top: 50px; float: left; font-size:1.5em;">
                                 <table height="50px">
                                     <tr>
                                         <th>
                                             게시일 :
                                         </th>
                                         <td>
                                             <%=year +'-' +month +'-' +date%>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             제품명 :
                                         </th>
                                         <td>
                                             <input type="text" name ="goodsName" id="id" value="<%=item.goods_name%>"/>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             작가 :
                                         </th>
                                         <td>
                                             <%=item.member_nick%>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             가격 :
                                         </th>
                                         <td>
                                             <input type="text" name ="goodsPrice" value="<%=item.goods_cost%>"/>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             최소주문수 :
                                         </th>
                                         <td>
                                             <input type="text" name ="goodsOrder" value="<%=item.goods_order%>"/>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             할인적용수 :
                                         </th>
                                         <td>
                                             <input type="text" name ="goodsSale" value="<%=item.goods_sale%>"/>
                                         </td>
                                     </tr>
                                     <tr>
                                         <th>
                                             현재주문수 :
                                         </th>
                                         <td>
                                            <%=item.goods_numOrder%>
                                         </td>
                                     </tr>
                                     <tr>
                                        <th>
                                            설명 :
                                        </th>
                                        <td>
                                             <textarea type="text" name="goodsContent" style="padding:10px; margin-top:10px; width:100%" maxlength=500 cols="80" rows=4 placeholder="<%=item.goods_content%>"></textarea>
                                        </td>
                                     </tr>
                                 </table>
                             </div>
                         </div>
                         <div style="max-width:100%;height:auto; float:right; margin-right:80px;">
                             <button type="submit" class="btn btn-warning" style="margin-right:20px;">수정하기</button>
                         </div>
                      </form>
                    </div>
                </div>
            </div>
