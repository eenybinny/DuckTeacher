<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <title>DuckTeacher</title>

        <!-- Bootstrap -->
        <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
            <style>
        .thumbnail-wrappper {
            width: 25%; 
        }

        .thumbnail {
            position: relative;
            padding-top: 100%;  /* 1:1 ratio */
            overflow: hidden;
        }

        .thumbnail .centered  {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            -webkit-transform: translate(50%,50%);
            -ms-transform: translate(50%,50%);
            transform: translate(50%,50%);
        }

        .thumbnail .centered img {
            position: absolute;
            top: 0;
            left: 0;   
            max-width: auto;
            height: 100%;
            -webkit-transform: translate(-50%,-50%);
            -ms-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <a class="navbar-brand" href="/main">덕선생._.</a>
            </div>
              <form class="navbar-form navbar-left" action="/market/search/author" method="get" id="searchAction" name = "searchAction">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="작가명을 입력하세요" name="searchWord" id="searchWord">
                </div>
                  <button type="submit" class="btn btn-default"><a href="#" onclick="searchContent()">검색</a></button>
              </form>
              <form class="navbar-form navbar-left" action="/market/search/goods" method="get" id="searchAction" name = "searchAction">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="제품명을 입력하세요" name="searchWord" id="searchWord">
                </div>
                  <button type="submit" class="btn btn-default"><a href="#" onclick="searchContent()">검색</a></button>
              </form>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/gallery">갤러리</a></li>
                <li><a href="/market">마켓</a></li>
                <li><a href="/myinfo">내정보보기</a></li>
              </ul>
          </div><!-- /.container-fluid -->
        </nav>
        <% var member = rows[0]; %> 
          <div class="row" style="margin-top:20px;margin-bottom:20px;">
            <div style="font-size:2em;margin-left:100px;margin-top:10px;">
             <b><%=member.member_nick%></b> 님의 제품보기
         </div>
         </div>
        <div class="row" style="max-width:100%;height:auto; margin-left:100px;margin-right:100px;background:#EAEAEA;border-radius:1em;">
            <%
                for(var i=0; i<rows.length; i++){
                var item = rows[i];
            %>
            <div class="col-xs-6 col-md-3 thumbnail-wrapper" height="100" style="margin-top:10px;">
                <a href="/market/goods/<%=item.goods_code%>/<%=item.goods_numOrder%>" class="thumbnail">
                   <div class="centered">
                    <img src="/images/<%=item.goods_image%>" >
                    </div>
                </a>
            </div>
            <% } %>
        </div>
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        
        <script>
            $(function(){

            $(".dropdown-menu li a").click(function(){

              $(".btn:first-child").text($(this).text());
              $(".btn:first-child").val($(this).text());

           });

        });
        </script>
    </body>
</html>